
@{
    ViewBag.Title = "Index";
}

<div id="clienteIndexContainer">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Clientes</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="TablaClientes" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>IdCliente</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Cedula</th>
                            <th>Correo</th>
                            <th>Telefono</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>IdCliente</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Cedula</th>
                            <th>Correo</th>
                            <th>Telefono</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div id="clienteFormularioContainer">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Agregar Nuevo  Cliente</h6>
        </div>
        <div class="card-body">
            <form id="FormularioCliente">
                <input type="hidden" class="form-control" id="IdCliente" name="IdCliente" placeholder="" value="">
                <div class="row">
                    <div class="form-group col-6">
                        <label for="NombreCliente">Nombres</label>
                        <input type="text" class="form-control" id="NombreCliente" name="Nombres" placeholder="Nombres" value="">
                    </div>
                    <div class="form-group col-6">
                        <label for="ApellidoClientes">Apellidos</label>
                        <input type="text" class="form-control" id="ApellidoClientes" name="Apellidos" placeholder="Apellidos" value="">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="CedulaCliente">Cedula</label>
                        <input type="text" class="form-control" id="CedulaCliente" name="Cedula" placeholder="000-000000-0000A" value="">
                    </div>
                    <div class="form-group col-6">
                        <label for="CorreoCliente">Correo</label>
                        <input type="email" class="form-control" id="CorreoCliente" name="Correo" placeholder="name@example.com" value="">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="TelefonoCliente">Telefono</label>
                        <input type="tel" class="form-control" id="TelefonoCliente" name="Telefono" placeholder="88888888">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 d-flex justify-content-end">
                        <button type="button" id="btnRegresarCliente" class="btn btn-info">Volver</button>
                        <button type="submit" id="btnGuardarCliente" class="btn btn-primary ml-2">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>


@section scripts {
    <script src="~/Scripts/VistasJS/Cliente/Index.js"></script>
}