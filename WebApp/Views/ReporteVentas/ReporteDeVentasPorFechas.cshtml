@model List<Modelo.ProcedimientosAlmacenados.spBuscarFacturaVentaPorRangoFechas_VM>

@{
    Layout = null;
}

<style>
    .container {
        width: 80%;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
        border: 1px solid #000;
        padding: 20px;
        box-sizing: border-box;
    }

    .header {
        width: 100%;
        display: table;
    }

        .header .logo {
            display: table-cell;
            width: 50%;
            text-align: left;
        }

        .header .date {
            display: table-cell;
            width: 50%;
            text-align: right;
            vertical-align: middle;
        }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }
</style>



    <div class="header">

        <div class="logo">
            <img src="https://th.bing.com/th/id/R.6f44c18a258388888e7334807e5d4228?rik=mIsihPVr9rQh8A&pid=ImgRaw&r=0" alt="Alternate Text" style="width:60px;" />
        </div>
        <div class="date">
            03-10-2001
        </div>

    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Numero Factura</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Cliente</td>
                        <td>@p.NumeroFactura</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

