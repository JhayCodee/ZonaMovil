
@{
    ViewBag.Title = "Index";
}

<div id="categoriaIndexContainer">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Categorias</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="TablaCategoria" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            @*<th>IdCategoria</th>*@
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            @*<th>IdCategoria</th>*@
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div id="categoriaFormularioContainer">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Agregar Nueva Categoria</h6>
        </div>
        <div class="card-body">
            <form id="FormularioCategoria">
                <input type="hidden" class="form-control" id="IdCategoria" name="IdCategoria" placeholder="" value="">
                <div class="row">
                    <div class="form-group col-6">
                        <label for="NombreCategoria">Nombre</label>
                        <input type="text" class="form-control" id="NombreCategoria" name="Nombre" placeholder="Nombre" value="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 d-flex justify-content-end">
                        <button type="button" id="btnRegresarCategoria" class="btn btn-info">Volver</button>
                        <button type="submit" id="btnGuardarCategoria" class="btn btn-primary ml-2">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section scripts {
     <script src="~/Scripts/VistasJS/Categoria/Validaciones.js"></script>
    <script src="~/Scripts/VistasJS/Categoria/Index.js"></script>
}

