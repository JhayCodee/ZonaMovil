
@{
    ViewBag.Title = "Index";
}


<div id="ProductoTablaContainer">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Productos</h6>
        </div>
        <div class="card-body ">
            <div class="table-responsive">
                <table class="table table-bordered" id="tablaProducto" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Modelo</th>
                            <th>Stock</th>
                            <th>Meses Garantia</th>
                            <th>Precio Compra</th>
                            <th>Precio Venta</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Nombre</th>
                            <th>Modelo</th>
                            <th>Stock</th>
                            <th>Meses Garantia</th>
                            <th>Precio Compra</th>
                            <th>Precio Venta</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<div id="ProductoFormularioContainer" style="display: none;">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Agregar Nuevo  Producto</h6>
        </div>
        <div class="card-body">
            <form id="FormularioProducto">
                <input type="hidden" class="form-control" id="IdProducto" name="IdProducto" placeholder="" value="">
                <div class="row">
                    <div class="form-group col-6">
                        <label for="NombreProducto">Nombre</label>
                        <input type="text" class="form-control" id="NombreProducto" name="Nombre" placeholder="NombreProducto" value="">
                    </div>
                    <div class="form-group col-6">
                        <label for="ModeloProducto">Modelo</label>
                        <input type="text" class="form-control" id="ModeloProducto" name="Modelo" placeholder="Modelo" value="">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="StockProducto">Stock</label>
                        <input type="number" class="form-control" id="StockProducto" name="Stock" placeholder="0" value="">
                    </div>
                    <div class="form-group col-6">
                        <label for="StockProducto">Garantia (Meses)</label>
                        <input type="number" class="form-control" id="GarantiaProducto" name="GarantiaEnMeses" placeholder="0" value="">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="StockProducto">Marca</label>
                        <select class="form-control selectpicker dropdown-menu-down" id="MarcaSelect" data-live-search="true" data-placement="bottom" name="IdMarca">
                            <option value="">Seleccionar categoría</option>
                        </select>
                        <input type="hidden" id="MarcaIdInput" name="categoriaId">
                    </div>
                    <div class="form-group col-6">
                        <label for="StockProducto">Categoria</label>
                        <select class="form-control selectpicker dropdown-menu-down" id="categoriaSelect" data-live-search="true" data-placement="bottom" name="IdCategoria">
                            <option value="">Seleccionar categoría</option>
                        </select>
                        <input type="hidden" id="categoriaIdInput" name="categoriaId">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="StockProducto">Precio de Compra</label>
                        <input type="number" class="form-control" id="PrecioCompra" name="PrecioCompra" placeholder="0" value="">
                    </div>
                    <div class="form-group col-6">
                        <label for="StockProducto">Precio de Venta</label>
                        <input type="number" class="form-control" id="PrecioVenta" name="PrecioVenta" placeholder="0" value="">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-12">
                        <label for="exampleFormControlTextarea1">Descripcion</label>
                        <textarea class="form-control" id="DescripcionProducto" rows="3" name="Descripcion"></textarea>
                    </div>

                </div>

                <div class="row">
                    <div class="col-12 d-flex justify-content-end">
                        <button type="button" id="btnRegresarProducto" class="btn btn-info">Volver</button>
                        <button type="submit" id="btnGuardarProducto" class="btn btn-primary ml-2">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

<!-- Ventana modal -->
<div class="modal fade" id="detalleproductoModal" tabindex="-1" role="dialog" aria-labelledby="detalleproductoModalLabel" aria-hidden="true" style="display:none;">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detalleproductoModalLabel">Detalles del producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" class="form-control" id="detalleIdProducto" name="detalleIdProducto" placeholder="" value="">
                <div class="row">
                    <div class="form-group col-6">
                        <label for="detalleNombreProducto">Nombre</label>
                        <input type="text" class="form-control" id="detalleNombreProducto" name="detalleNombreProducto" placeholder="NombreProducto" value="" readonly>
                    </div>
                    <div class="form-group col-6">
                        <label for="detalleModeloProducto">Modelo</label>
                        <input type="text" class="form-control" id="detalleModeloProducto" name="detalleModeloProducto" placeholder="Modelo" value="" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="detalleStockProducto">Stock</label>
                        <input type="number" class="form-control" id="detalleStockProducto" name="detalleStockProducto" placeholder="0" value="" readonly>
                    </div>
                    <div class="form-group col-6">
                        <label for="detalleGarantiaProducto">Garantia (Meses)</label>
                        <input type="number" class="form-control" id="detalleGarantiaProducto" name="detalleGarantiaProducto" placeholder="0" value="" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="StockProducto">Marca</label>
                        <input type="text" class="form-control" id="detalleMarcaInput" name="Marca" placeholder="Marca" readonly>
                        <input type="hidden" id="MarcaIdInput" name="IdMarca">
                    </div>
                    <div class="form-group col-6">
                        <label for="StockProducto">Categoría</label>
                        <input type="text" class="form-control" id="detalleCategoriaInput" name="Categoria" placeholder="Categoría" readonly>
                        <input type="hidden" id="CategoriaIdInput" name="IdCategoria">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-6">
                        <label for="detallePrecioCompra">Precio de Compra</label>
                        <input type="number" class="form-control" id="detallePrecioCompra" name="detallePrecioCompra" placeholder="0" value="" readonly>
                    </div>
                    <div class="form-group col-6">
                        <label for="detallePrecioVenta">Precio de Venta</label>
                        <input type="number" class="form-control" id="detallePrecioVenta" name="detallePrecioVenta" placeholder="0" value="" readonly>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-12">
                        <label for="detalleDescripcionProducto">Descripción</label>
                        <textarea class="form-control" id="detalleDescripcionProducto" rows="3" name="detalleDescripcionProducto" readonly></textarea>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script src="~/Scripts/VistasJS/Producto/Validaciones.js"></script>
    <script src="~/Scripts/VistasJS/Producto/Producto.js"></script>
}